rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for authentication and authorization
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Projects collection - user can only read/write their own projects
    match /projects/{projectId} {
      // Allow users to read their own projects
      allow read: if isSignedIn() &&
                     resource.data.userId == request.auth.uid;

      // Allow users to create projects with their own userId
      allow create: if isSignedIn() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['name', 'client', 'totalCost', 'userId', 'amountPaid', 'stages', 'createdAt', 'updatedAt']) &&
                       request.resource.data.name is string &&
                       request.resource.data.client is string &&
                       request.resource.data.totalCost is number &&
                       request.resource.data.amountPaid is number &&
                       request.resource.data.amountPaid >= 0 &&
                       request.resource.data.amountPaid <= request.resource.data.totalCost &&
                       request.resource.data.stages is list;

      // Allow users to update their own projects
      allow update: if isSignedIn() &&
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.amountPaid >= 0 &&
                       request.resource.data.amountPaid <= request.resource.data.totalCost;

      // Allow users to delete their own projects
      allow delete: if isSignedIn() &&
                       resource.data.userId == request.auth.uid;

      // Notes subcollection - allow access if user owns the parent project
      match /notes/{noteId} {
        allow read, write: if isSignedIn() &&
                             get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
      }

      // Activities subcollection - allow access if user owns the parent project
      match /activities/{activityId} {
        allow read, write: if isSignedIn() &&
                             get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
